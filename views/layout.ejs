<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="InnovateMax - Revolutionary management innovation platform for modern businesses">
  <meta name="keywords" content="management, innovation, business, productivity, efficiency">
  
  <!-- Performance optimizations -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="dns-prefetch" href="//fonts.googleapis.com">
  
  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  
  <!-- Styles -->
  <link rel="stylesheet" href="/css/style.css">
  
  <!-- Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  
  <title><%= title %></title>
</head>
<body>
  <header class="header">
    <nav class="nav container">
      <a href="/" class="logo">InnovateMax</a>
      <ul class="nav-menu">
        <li><a href="/" class="nav-link <%= page === 'home' ? 'active' : '' %>">Home</a></li>
        <li><a href="/about" class="nav-link <%= page === 'about' ? 'active' : '' %>">About</a></li>
        <li><a href="/features" class="nav-link <%= page === 'features' ? 'active' : '' %>">Features</a></li>
        <li><a href="/contact" class="nav-link <%= page === 'contact' ? 'active' : '' %>">Contact</a></li>
      </ul>
    </nav>
  </header>

  <main class="main">
    <%- body %>
  </main>

  <footer class="footer">
    <div class="container">
      <p>&copy; 2024 InnovateMax. All rights reserved. | Revolutionizing Management Innovation</p>
    </div>
  </footer>

  <script>
    // Performance optimization: Lazy load images
    if ('IntersectionObserver' in window) {
      const imageObserver = new IntersectionObserver((entries, observer) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const img = entry.target;
            img.src = img.dataset.src;
            img.classList.remove('lazy');
            imageObserver.unobserve(img);
          }
        });
      });

      document.querySelectorAll('img[data-src]').forEach(img => {
        imageObserver.observe(img);
      });
    }

    // Smooth scrolling for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  </script>
</body>
</html>